<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="custom_fired_form_view" model="ir.ui.view">
            <field name="name">custom_fired.form</field>
            <field name="model">custom.fired</field>
            <field name="arch" type="xml">
                <form string="AFP">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Nombre"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="article"/>
                                <field name="sequence"/>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="custom_afp_tree_view" model="ir.ui.view">
            <field name="name">custom_fired.tree</field>
            <field name="model">custom.fired</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="article"/>
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>


        <record id="custom_fired_act_window" model="ir.actions.act_window">
            <field name="name">Causales de despido</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">custom.fired</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Causales de despido" id="custom_fired_menu" parent="hr_work_entry_contract.menu_hr_payroll_configuration" action="custom_fired_act_window"/>

</odoo>