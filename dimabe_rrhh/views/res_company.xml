<odoo>
    <data>
        <record id="view_company_form_inherit" model="ir.ui.view">
        <field name="name">formulario de compañía</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
            <page name="rrhh_tab" string="RRHH">
                <group name="rrhh_configuration" cols="">
                    <field name="analitic_account"/>
                </group>
                <group name="rrhh_sale_employee_conf">
                    <field name="sale_employee_payment_term_id"/>
                    <field name="sale_employee_journal_id"/>
                </group>
                <group name="rrhh_vacation_conf">
                    <field name="vacation_day_for_month"/>
                </group>
                <group name="rrhh_lisences_conf">
                    <field name="min_licence_days"/>
                </group>
            </page>
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="legal_representative_id"/>
            </xpath>
        </field>
        </record>
    </data>
</odoo>