<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_inherit_form_inherit" model="ir.ui.view">
        <field name="name">hr_inherit.form</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="priority" eval="17"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button type="object" string="Actualizar otras Entradas" name="update_other_entries" attrs="{'invisible':[('state','=','done')]}"/>
                <button type="object" string="limpiar prestamos" name="clean_loan" />
            </xpath>
            <xpath expr="//field[@name='worked_days_line_ids']/tree//field[@name='name']" position="after">
                <field name="code"/>
            </xpath>
            <xpath expr="//field[@name='input_line_ids']/tree//field[@name='amount']" position="before">
                <field name="code"/>
            </xpath>
            <xpath expr="//field[@name='worked_days_line_ids']/tree//field[@name='number_of_days']"
                   position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <xpath expr="//field[@name='worked_days_line_ids']/tree//field[@name='number_of_hours']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='paid']" position="before">
                <field name="account_analytic_id"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="payment_term_id"/>
            </xpath>
            <xpath expr="//page[1]" position="after">
                <page string="Prevision">
                    <group string="Indicadores">
                        <field name="indicator_id"/>
                    </group>
                </page>
                <page string="Movimientos de Personal">
                    <group>
                        <field name="personal_movement_ids">
                            <tree editable="bottom">
                                <field name="personal_movements"/>
                                <field name="line_type"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="days"/>
                            </tree>
                        </field>
                    </group>
                    <group>
                        <field name="last_full_payslip" attrs="{'readonly':[('state','=','done')]}"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//button[@name='action_payslip_done']" position="replace">
                <button string="Confirmar Nomina" name="action_payslip_done" type="object" invisible="1"
                        class="oe_highlight" context="{'payslip_generate_pdf': True}"/>
            </xpath>
            <xpath expr="//field[@name='move_id']" position="attributes">
                 <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='paid']" position="attributes">
                 <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='account_analytic_id']" position="attributes">
                 <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='input_line_ids']" position="after">
                <group>
                    <field name="salary_id"/>
                    <button name="add" type="object" string="Agregar"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='input_line_ids']/tree//field[@name='code']" position="before">
                <field name="additional_info"/>
            </xpath>
        </field>
    </record>
    <record id="hr_inherit_tree_inherit" model="ir.ui.view">
        <field name="name">hr_inherit.tree</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='basic_wage']" position="replace">
                <field name="basic_salary"/>
            </xpath>
            <xpath expr="//field[@name='net_wage']" position="replace">
                <field name="net_salary"/>
            </xpath>
        </field>
    </record>
</odoo>