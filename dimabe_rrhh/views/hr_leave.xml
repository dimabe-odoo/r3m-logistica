<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_leave_view_form_manager_inherit" model="ir.ui.view">
            <field name="name">hr.leave.inherit</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="contract_id" domain="[('employee_id','=',employee_id)]" attrs="{'invisible': [('holiday_type', '!=', 'employee')],'required': [('holiday_type', '=', 'employee')]}"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="approve_date" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="period_id" domain="[('employee_id','=',employee_id), ('contract_id','=',contract_id)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>